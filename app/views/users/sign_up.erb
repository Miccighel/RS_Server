<!DOCTYPE html>
<html lang="en">
<%= render partial: 'shared/assets' %>
<body>
<div class="min-h-100 d-flex flex-column align-items-center justify-content-center">
	<div class="w-100 mb-3">
		<%= render partial: 'shared/menu', locals: {active: "sign-up", appearance: "dark"} %>
	</div>
	<div class="row w-100 m-auto">
		<div class="col-12">
			<div class="heading text-center">
				<h4>Readersourcing 2.0</h4>
				<p class="lead mb-0">Insert your data</p>
			</div>
		</div>
		<div class="col-lg-4 col-sm-8 col-xs-12 m-auto">
			<form id="sign-up-form" data-parsley-validate>
				<div class="row">
					<div class="col-12">
						<div class="form-group">
							<label for="first-name">First Name</label>
							<input id="first-name" type="text" class="form-control" placeholder="">
						</div>
					</div>
					<div class="col-12">
						<div class="form-group">
							<label for="last-name">Last Name</label>
							<input id="last-name" type="text" class="form-control" placeholder="">
						</div>
					</div>
					<div class="col-12">
						<div class="form-group">
							<label for="email">Email <span class="small">(e.g. address@example.com)</span></label>
							<input id="email" type="text" class="form-control" placeholder="" data-parsley-type="email" required>
						</div>
					</div>
					<div class="col-12">
						<div class="form-group">
							<label for="orcid">ORCID <span class="small">(e.g. 1234-1234-1234-1234)</span></label>
							<input id="orcid" type="text" class="form-control" placeholder="" data-parsley-orcid>
						</div>
					</div>
					<div class="col-12">
						<div class="form-group">
							<label for="password">Password </label>
							<input id="password" type="password" class="form-control" placeholder="" data-parsley-minlength="6" data-parsley-password required>
						</div>
					</div>
					<div class="col-12">
						<div class="form-group">
							<label for="password-confirmation">Password (Confirmation)</label>
							<input id="password-confirmation" type="password" class="form-control" placeholder="" data-parsley-minlength="6" data-parsley-password required>
						</div>
					</div>
					<div class="col-12">
						<div class="form-group no-mb">
							<input id="subscribe" type="checkbox">
							<label for="subscribe">Subscribe (To Emails)</label>
						</div>
					</div>
					<div class="col-12">
						<hr class="mb-2 mt-2"/>
					</div>
					<div class="col-12">
						<p class="text-sm text-center">
							<small><a href="<%= login_path %>">You already have an account?</a></small>
						</p>
					</div>
					<div class="col-12 text-center">
						<section class="errors-sect text-left">
							<div role="alert" class="alert alert-danger"></div>
						</section>
						<button type="submit" id="do-sign-up-btn" class="btn btn-success w-35">
							Sign Up
							<i class="fa fa-user-plus sign-up-icon"></i>
							<i class="fas fa-sync-alt fa-spin reload-icon"></i>
						</button>
						<button type="button" class="btn btn-danger error-btn w-35">
							<i class="fa fa-exclamation-triangle danger-icon"></i>
							Error
						</button>
					</div>
				</div>
			</form>
		</div>
	</div>
	<div class="row w-100 mt-3">
		<%= render partial: "shared/footer" %>
	</div>
</div>
</body>
</html>